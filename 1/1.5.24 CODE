#imports
import turtle as text
import turtle as trtl
import random as rand


#-------Cover Contents--------
#conditionals
Sea = input("Do you like sea?")
if(Sea == 'yes'):
  print(":)")
else:
  print(":(")

Turtle = input("Do you like turtles?")
if(Turtle == "yes"):
  print("Help save Sea Turtles! :D")
else:
  print("Sea Turtles are endangered :(")



# Inputs and text
def happybirthday():
    #Name Input
    name = input("Name?")
    #Background color Input
    global bg_color
    color_list = ['red','orange','green','yellow','light blue','purple','pink','brown','black']
    bg_color= 'blue'
    #Text color Input
    text_color = rand.choice(color_list)

    #Font Setup
    font_setup = ('Monaco',80)
    text.color(str(text_color))

    #Happy Birthday Text
    text.pu()
    text.goto(-600,150)
    text.pd()
    text.write("It's up to you, " + str(name) +  '\n ' + 'to save the Sea Turtle!', font = font_setup)
    text.hideturtle()
happybirthday()

#Background color and WN
wn = trtl.Screen()
wn.bgcolor(bg_color)

#cover image
Cover = 'Front.gif' 
wn.addshape(Cover)
cover_trtl = trtl.Turtle()
def cover_app(Cover):
  cover_trtl.shape(Cover)
  wn.update()
cover_app(Cover)
cover_trtl.showturtle()
cover_trtl.penup()
cover_trtl.goto(100,-100)

#bubbles
def bubbles():
  bub = 'bubbles.gif'
  for i in range (100):
    wn.addshape(bub)
    sprinkles = trtl.Turtle(shape=bub)
    sprinkles.hideturtle()
bubbles()

#random money
def yay():
  yay = trtl.Turtle()
  yay.hideturtle()
  yay.color('black')
  for p in range(20):
    xpos = rand.randint(-800,800)
    ypos = rand.randint(-400,400)
    ss = rand.randint(15,80)
    yay.color('white')
    yay.write('Save the Sea Turtles!')
    yay.penup()
    yay.goto(xpos,ypos)
    yay.pendown()
yay()


#------Inside contents-------

#turtles/nostraw
def turtle_straw():
  #turtle
  turtle = 'turtle.gif'
  wn.addshape(turtle)
  turt = trtl.Turtle(turtle)
  turt.penup()
  i=0
  turt.goto(-300,-100)
  #nostraw
  straw = 'nostraw.gif'
  wn.addshape(straw)
  nostraw = trtl.Turtle(straw)
  nostraw.penup()
  nostraw.goto(-880,400)

  #movement loop
  while(i==0):
    turt.setheading(270)
    turt.forward(50)
    turt.setheading(-270)
    turt.forward(50)
    nostraw.setheading(270)
    nostraw.forward(50)
    nostraw.setheading(-270)
    nostraw.forward(50)

def Inside(x,y):
  #inside_image
  Inside = 'Inside.gif'
  wn.addshape(Inside)
  inside_trtl = trtl.Turtle(Inside)
  def inside_app(Inside):
    inside_trtl.shape(Inside)
    wn.update()
  cover_trtl.hideturtle()
  inside_app(Inside)
  inside_trtl.penup()
  inside_trtl.goto(350,-150)

  turtle_straw()

#onclick
cover_trtl.onclick(Inside)

#mainloop
mainloop = wn.mainloop()
